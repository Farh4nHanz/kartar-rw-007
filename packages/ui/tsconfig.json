{
	"extends": "../config/tsconfig.base.json",
	"compilerOptions": {
		"lib": ["DOM", "DOM.Iterable"],
		"composite": true,
		"jsx": "react-jsx",
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"outDir": "dist",
		"rootDir": "src",
		"paths": {
			"@workspace/ui/*": ["./src/*"]
		}
	},
	"include": ["src"],
	"exclude": ["dist"]
}
