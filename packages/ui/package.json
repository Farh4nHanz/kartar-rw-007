{
	"name": "@workspace/ui",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"exports": {
		".": {
			"lib/*": {
				"types": "./dist/lib/*.d.ts",
				"default": "./src/lib/*.ts"
			},
			"utils/*": {
				"types": "./dist/lib/utils/*.d.ts",
				"default": "./src/lib/utils/*.ts"
			},
			"components/*": {
				"types": "./dist/components/*.d.ts",
				"default": "./src/components/*.tsx"
			},
			"hooks/*": {
				"types": "./dist/hooks/*.d.ts",
				"default": "./src/hooks/*.ts"
			},
			"types/*": {
				"types": "./dist/types/*.d.ts",
				"default": "./src/types/*.ts"
			}
		},
		"./index.css": "./src/index.css"
	},
	"scripts": {
		"build": "tsc -b",
		"check-types": "tsc --noEmit"
	},
	"dependencies": {
		"class-variance-authority": "catalog:",
		"clsx": "catalog:",
		"lucide-react": "catalog:",
		"motion": "catalog:",
		"next-themes": "catalog:",
		"radix-ui": "^1.4.3",
		"react": "catalog:",
		"react-dom": "catalog:",
		"recharts": "catalog:",
		"sonner": "catalog:",
		"tailwind-merge": "catalog:",
		"tw-animate-css": "catalog:"
	},
	"devDependencies": {
		"tailwindcss": "catalog:",
		"postcss": "catalog:",
		"typescript": "catalog:",
		"@types/node": "catalog:",
		"@types/react": "catalog:",
		"@types/react-dom": "catalog:"
	}
}
